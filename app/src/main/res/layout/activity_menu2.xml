<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity2">


    <TextView
        android:id="@+id/servicemessage"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Choose any service you
        need!"
        android:textSize="30dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/carride"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="220dp"
            android:drawableTop="@drawable/ic_car"
            android:gravity="center"
            android:text="CAR"
            android:textSize="17dp" />

        <Button
            android:id="@+id/service"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="220dp"
            android:drawableTop="@drawable/settings"
            android:gravity="center"
            android:text="SETTING"
            android:textSize="17dp" />
    </LinearLayout>

    <Button
        android:id="@+id/carsale"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:drawableTop="@drawable/sale_car"
        android:gravity="center"
        android:text="SALE"
        android:textSize="17dp" />

    <Button
        android:id="@+id/continuebtn"
        android:gravity="center"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="110dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textSize="17dp"
        />

    <Button
        android:id="@+id/lanbtn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="400dp"
        android:drawableTop="@drawable/ic_lan"
        android:gravity="center"
        android:text="CONNECT"
        android:textSize="17dp" />

</RelativeLayout>